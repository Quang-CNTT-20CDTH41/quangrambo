package CUOIKY1;
import java.util.Scanner;
public class bt3a {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n;
		double s = 0;
		System.out.printf("Nhap n: ");
		n = sc.nextInt();
		for(int i=1; i<n; i++) {
			s +=(double) i/(i+1);
		}
		System.out.printf("Nhap n: %f", s);
	}
}
// s = 1/2 + 2/3 + 3/4 + ((n-1)/n)
