package CUOIKY1;
import java.util.Scanner;
public class sssss {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n, a=0, s =1;
		System.out.printf("Nhap n: ");
		n = sc.nextInt();
		for(int i=1; i<=n; i++) {
			s *= i;
			a += s;
		}
		System.out.printf("tong giai thua la: %d",a);
	}
}
